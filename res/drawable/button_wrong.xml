<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <gradient
                android:centerColor="#AB1000"
                android:startColor="#AB0032"
                android:endColor="#AB0023"
                android:type="linear"/>
            <corners
                android:radius="17dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#AB0020"
                />
        </shape>
    </item>
</selector>