<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <gradient
                android:centerColor="#13AB72"
                android:startColor="#13AB22"
                android:endColor="#13AE02"
                android:type="linear"/>
            <corners
                android:radius="17dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#13AB22"
                />
        </shape>
    </item>
</selector>