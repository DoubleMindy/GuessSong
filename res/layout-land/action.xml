<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActionActivity">

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C9C2BB"
        >

        <Button
            android:id="@+id/button1"
            android:layout_width="187dp"
            android:layout_height="80dp"
            android:layout_gravity="top|left"
            android:textAllCaps="false"
            android:fontFamily="@font/nord"
            android:textColor="#1C1C1C"
            android:background="@drawable/button_act"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            ></Button>

        <Button
            android:id="@+id/button2"
            android:layout_width="187dp"
            android:layout_height="80dp"
            android:layout_gravity="top|right"
            android:textAllCaps="false"
            android:fontFamily="@font/nord"
            android:textColor="#1C1C1C"
            android:background="@drawable/button_act"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            ></Button>

        <Button
            android:id="@+id/button3"
            android:layout_width="187dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|left"
            android:textAllCaps="false"
            android:fontFamily="@font/nord"
            android:textColor="#1C1C1C"
            android:background="@drawable/button_act"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            ></Button>

        <Button
            android:id="@+id/button4"
            android:layout_width="187dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|right"
            android:textAllCaps="false"
            android:fontFamily="@font/nord"
            android:textColor="#1C1C1C"
            android:background="@drawable/button_act"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            ></Button>

        <ImageView
            android:id="@+id/Photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/Photo1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/plast"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/PhotoHint"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginRight="40dp"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <TextView
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:fontFamily="@font/mirror"
            android:text="Угадано: "
            android:textColor="#FF0012"
            android:textSize="18dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/Progress"
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/mirror"
            android:text="0"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="127dp"
            android:layout_height="39dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/mirror"
            android:text="Всего песен: 7"
            android:textColor="#FF0012"
            android:textSize="18dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_gravity="center|left"
            android:fontFamily="@font/mirror"
            android:text="Попыток: "
            android:textColor="#FF0012"
            android:textSize="18dp"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/Tried"
            android:layout_width="19dp"
            android:layout_height="33dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="80dp"
            android:fontFamily="@font/mirror"
            android:text="3"
            android:textSize="17dp"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/fiftyHint"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:srcCompat="@drawable/fifty" />

        <ImageButton
            android:id="@+id/refreshHint"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="40dp"
            app:srcCompat="@android:drawable/ic_menu_rotate" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_gravity="center|left"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/mirror"
            android:text="Монеты: "
            android:textColor="#FF0012"
            android:textSize="17dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/coin"
            android:layout_width="99dp"
            android:layout_height="31dp"
            android:fontFamily="@font/mirror"
            android:layout_gravity="center|left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:gravity="left"
            android:text="0"
            android:textSize="17dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/FreeHint"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginTop="30dp"
            android:text="Пропустить мелодию!"
            android:visibility="invisible"
            />

    </FrameLayout>
</LinearLayout>