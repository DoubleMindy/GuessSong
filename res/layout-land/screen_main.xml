<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCat"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-50dp"
        android:fontFamily="@font/gostcad"
        android:text="Категорий угадано:"
        android:textColor="#751243"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/progr_cat"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCat"
        android:layout_marginBottom="-50dp"
        android:layout_marginEnd="-180dp"
        android:layout_toStartOf="@+id/progr"
        android:fontFamily="@font/gostcad"
        android:text="0"
        android:textColor="#751243"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginRight="-180dp"
        android:layout_toLeftOf="@+id/progr" />

    <TextView
        android:layout_width="91dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/coins"
        android:layout_toStartOf="@+id/coins"
        android:fontFamily="@font/gostcad"
        android:text="Ваш счет:"
        android:textColor="#751243"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCat"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"

        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/oval"
        android:fontFamily="@font/nord"
        android:text="ИГРА ПО КАТЕГОРИЯМ"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnAut"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"

        android:layout_marginRight="30dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/oval"
        android:fontFamily="@font/nord"
        android:text="УГАДАЙ ИСПОЛНИТЕЛЯ"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnEx"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"


        android:layout_marginTop="230dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/oval"
        android:fontFamily="@font/nord"
        android:text="ВЫХОД"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coins"
        android:layout_width="103dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/gostcad"
        android:text="0"
        android:textColor="#751243"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/gostcad"
        android:text="Исполнителей угадано:"
        android:textColor="#751243"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/progr"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="180dp"
        android:fontFamily="@font/gostcad"
        android:text="0"
        android:textColor="#751243"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="180dp" />

</RelativeLayout>